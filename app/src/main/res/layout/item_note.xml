<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/cornsilk">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/txt_image_note"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/pencil"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/icon_date"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/schedule"
                android:layout_marginLeft="200dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_toRightOf="@+id/txt_image_note"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/08/2020"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_toRightOf="@+id/icon_date"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_image_note"
                android:text="Title "
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_black_italic"/>
            <View
                android:id="@+id/line"
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_below="@id/txt_title"
                android:layout_toRightOf="@id/txt_image_note"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_image_note"
                android:layout_below="@id/line"
                android:layout_marginLeft="25dp"
                android:text="Note isi"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textAlignment="inherit"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>